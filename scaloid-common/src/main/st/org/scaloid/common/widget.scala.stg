    addRule(RelativeLayout.ALIGN_LEFT, otherView.uniqueId)
    this
  }

  def alignParentBottom = {
    addRule(RelativeLayout.ALIGN_PARENT_BOTTOM)
    this
  }

  //def alignParentEnd = {
  //  addRule(RelativeLayout.ALIGN_PARENT_END)
  //  this
