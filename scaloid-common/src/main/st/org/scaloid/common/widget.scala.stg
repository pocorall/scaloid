  def alignParentTop = {
    addRule(RelativeLayout.ALIGN_PARENT_TOP)
    this
  }

  def alignRight(otherView: View)(implicit activity: Activity) = {
    addRule(RelativeLayout.ALIGN_RIGHT, otherView.uniqueId)
    this
  }

  //def alignStart = {
  //  addRule(RelativeLayout.ALIGN_START)
  //  this
